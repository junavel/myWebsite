@{
    ViewBag.Title = "ShowUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userList = (IEnumerable<registered_user>)ViewData["UserList"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        h2 {
            color: mediumpurple;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: -webkit-linear-gradient(left, #0072ff, #8811c5);
            color: #fff;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
        /* Common style for action buttons */
        .action-button {
            color: white; /* White text color */
            border: none; /* No border */
            padding: 10px 20px; /* Padding around the text */
            text-align: center; /* Center the text */
            text-decoration: none; /* No underlining */
            display: inline-block; /* Display as inline-block */
            font-size: 16px; /* Font size */
            cursor: pointer; /* Cursor style */
            border-radius: 4px; /* Rounded corners */
            margin-right: 15px; /* Add some margin between buttons */
        }

        /* Style for delete button */
        .edit-button {
            background-color: #8a2be2; /* Purple-blue background color */
        }

        /* Style for edit button */
        .delete-button {
            background-color: #89CFF0 /* Green background color */
        }

        /* Container to hold buttons */
        .button-container {
            display: flex; /* Use flexbox for layout */
        }


    </style>
    <title>Show User</title>
</head>
<body>
    <h2>Show User</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Password</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in userList)
            {
                <tr>
                    <td>@item.firstname</td>
                    <td>@item.lastname</td>
                    <td>@item.email</td>
                    <td>@item.password</td>
                    <td>
                        <div class="button-container">
                            <form method="post" action="UserUpdate">
                                <input type="hidden" name="id" value="@item.userId" />
                                <button type="submit" class="action-button edit-button">Edit</button>
                            </form>
                            <form method="post" action="UserDelete">
                                <input type="hidden" name="id" value="@item.userId" />
                                <button type="submit" class="action-button delete-button">Delete</button>
                            </form>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>